{
  "name": "react-ssr-express",
  "version": "1.0.0",
  "scripts": {
    "start": "nodemon build/server.js",
    "build": "npm run build:server && npm run build:client",
    "build:client": "esbuild src/client.jsx --bundle --jsx=automatic --splitting --format=esm --minify --outdir=dist",
    "build:server": "esbuild src/server.js --platform=node --bundle --jsx=automatic --minify --outdir=build"
  },
  "dependencies": {
    "express": "^4.19.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "esbuild": "0.23.0",
    "nodemon": "^3.1.4"
  }
}
